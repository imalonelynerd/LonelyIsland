@import "vars.less";
@import url('https://fonts.googleapis.com/css2?family=Varela+Round&display=swap');

@media only screen and (min-width: 769px) and (orientation: landscape) {
  body {
    background: var(--background);
    font-family: "Valera Round 400", sans-serif;
    color: var(--font-color);
  }

  #panel {
    position: absolute;
    top: var(--margin);
    bottom: var(--margin);
    left: var(--margin);
    right: var(--margin);
    display: grid;
    flex-direction: column;
    align-items: stretch;
    grid-template-columns: repeat(5, 1fr);
    grid-auto-rows: 1fr;
    grid-auto-columns: 1fr;
    row-gap: var(--margin);
    column-gap: var(--margin);
  }

  #panel > div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius);
  }

  #panel > div[onclick=""] {
    background: none;
    border: dotted 0.5vh #808080;
  }

  #panel > div:not([onclick=""]) {
    border: none;
    transition: scale 0.25s, box-shadow 0.25s;
    cursor: pointer;
    box-shadow: 0 2vh 2vh 0 rgba(0, 0, 0, 0.25);
  }

  #panel > div:not([onclick=""]):hover {
    scale: 1.1;
    box-shadow: 0 4vh 4vh 0 rgba(0, 0, 0, 0.25);
  }

  #panel > div > * {
    margin: 0.5vh;
    text-align: center;
  }

  #panel > div > img {
    height: 8vh;
    float: left;
  }

  #panel > div > h2 {
    font-size: 2.5vh;
  }

  #panel > div > p {
    font-size: 1.5vh;
  }

  #panel > div > code {
    font-size: 1.5vh;
    padding: 1vh;
    border-radius: var(--radius);
    background: var(--code-bg);
  }
}

@media only screen and (max-width: 768px), (orientation: portrait) {
  body {
    background: var(--background);
    font-family: "Valera Round 400", sans-serif;
    color: var(--font-color);
  }

  #panel {
    position: absolute;
    top: var(--margin);
    left: var(--margin);
    right: var(--margin);
    display: flex;
    flex-direction: column;
    align-items: stretch;
    row-gap: var(--margin);
    column-gap: var(--margin);
  }

  #panel > div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius);
    padding: var(--margin);
  }

  #panel > div[onclick=""] {
    display: none;
  }

  #panel > div:not([onclick=""]) {
    border: none;
    transition: scale 0.25s, box-shadow 0.25s;
    cursor: pointer;
    box-shadow: 0 2vh 2vh 0 rgba(0, 0, 0, 0.25);
  }

  #panel > div:not([onclick=""]):active {
    box-shadow: 0 4vh 4vh 0 rgba(0, 0, 0, 0.25);
    scale: 1.1;
  }

  #panel > div > * {
    margin: 0.5vh;
    text-align: center;
  }

  #panel > div > img {
    height: 8vh;
  }

  #panel > div > h2 {
    font-size: 2.5vh;
  }

  #panel > div > p {
    font-size: 1.5vh;
  }

  #panel > div > code {
    font-size: 1.5vh;
    padding: 1vh;
    border-radius: var(--radius);
    background: var(--code-bg);
  }

  #panel > div:nth-of-type(12) {
    margin-bottom: var(--margin);
  }

}